# Environment Configuration Template
# Copy this file to .env and fill in your values

# REQUIRED: API Access Token from IRIS system
IRIS_ACCESS_TOKEN=your-iris-token-here

# REQUIRED: API Key for your backend authentication
# Generate a strong random key: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEY=your-secret-api-key-change-this-in-production

# OPTIONAL: Flask configuration
FLASK_ENV=production
FLASK_DEBUG=False

# OPTIONAL: Rate limiting (if using Redis)
# RATELIMIT_STORAGE_URL=redis://localhost:6379/0
